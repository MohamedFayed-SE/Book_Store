@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<BLL.Dtos.CategoryDto>;

<h2>Index</h2>
<div class="col-md-3">
    <a class="w-100" asp-controller="Category" asp-action="Create"><button class="btn btn-primary w-100">Add</button></a>
</div>

<table class="table">

    <tbody>


        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"># ID</th>

                    <th scope="col">Name</th>


                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>



                        <td>  <a asp-route-Id="@item.Id" asp-controller="Category" asp-action="Update"> <button class="btn btn-info">Update</button> </a></td>
                        <td> <a asp-route-Id="@item.Id" asp-controller="Category" asp-action="Delete"> <button class="btn btn-danger">Delete</button> </a></td>
                    </tr>
                }


            </tbody>
        </table>



    </tbody>
</table>




