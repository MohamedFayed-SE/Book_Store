@{
    ViewData["Title"] = "Create";
}
@model BLL.Identity.Dtos.RegistrationDto;
<h2>Create</h2>



<form asp-controller="User" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All">
    </div>
    <div class="form-group">
        <label> First Name</label>
        <input type="text" class="form-control" placeholder="Enter Name" asp-for="FirstName">
        <span asp-validation-for="FirstName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label> Last Name</label>
        <input type="text" class="form-control" placeholder="Enter Name" asp-for="LastName">
        <span asp-validation-for="LastName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label> Email</label>
        <input type="email" class="form-control" placeholder="Enter Emial" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label> password</label>
        <input type="password" class="form-control" placeholder="Enter Password" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label> Confirmed Password</label>
        <input type="password" class="form-control" placeholder="Enter Password" asp-for="ConfirmedPassword">
        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label> Select User Photo</label>
        <input type="file" class="form-control" placeholder="Upload" asp-for="Photo">
        <span asp-validation-for="Photo" class="text-danger"></span>

    </div>
    <div class="form-group">
      
        <input type="hidden" class="form-control" placeholder="Upload" asp-for="IsAgree" value="true">
        <span asp-validation-for="IsAgree" class="text-danger"></span>

    </div>





    <button class="btn btn-info" type="submit">Add</button>

</form>



@section MicroSoftValidation {

    <script src="~/plugins//jquery-validation//jquery.validate.js"> </script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

