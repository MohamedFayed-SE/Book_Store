
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<ApplicationUser>;

<h2>Users</h2>
<div class="col-md-3">
    <a class="w-100" asp-controller="User" asp-action="Create"><button class="btn btn-primary w-100">Add</button></a>
</div>

<table class="table">

    <tbody>


        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"># ID</th>

                    <th scope="col">Name</th>


                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td > <img  width="30" height="30" src="~/Files/@item.UserPhoto" > </td>



                        <td>  <a asp-route-Id="@item.Id" asp-controller="Author" asp-action="Update"> <button class="btn btn-info">Update</button> </a></td>
                        <td> <a asp-route-Id="@item.Id" asp-controller="Author" asp-action="Delete"> <button class="btn btn-danger">Delete</button> </a></td>
                    </tr>
                }


            </tbody>
        </table>



    </tbody>
</table>




