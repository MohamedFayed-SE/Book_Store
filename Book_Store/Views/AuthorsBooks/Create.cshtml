@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
@model BLL.Dtos.AuthorsBooksDto;
@inject BLL.Interfaces.IBookService Book;
@inject BLL.Interfaces.IAutherService Author;

<form asp-controller="AuthorsBooks" asp-action="Create" method="post" >
    <div asp-validation-summary="All">

    </div>
    
    
   
    <div class="form-group">
        <label>Choose Book </label>
      
        <select id="BookList" asp-for="BookId" >

            <option value="">Select</option>
            @foreach (var item in await Book.GetBooksAsync())
            {
                <option value="@item.Id">@item.Name</option>
            }


          
        </select>
        <span asp-validation-for="BookId"></span>
        </div>

    <div class="form-group">
        <label>Choose Author </label>

        <select id="BookList" asp-for="AuthorId">

            <option value="">Select</option>
            @foreach (var item in await Author.GetAuthorsAsync())
            {
                <option value="@item.Id">@item.Name</option>
            }



        </select>
        <span asp-validation-for="BookId"></span>
    </div>


        <button class="btn btn-info" type="submit">Add</button>

      </form>

        

@section MicroSoftValidation {

    <script src="~/plugins//jquery-validation//jquery.validate.js"> </script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
