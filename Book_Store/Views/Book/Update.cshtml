@{
    ViewData["Title"] = "Create";
}

<h2>Update</h2>
@model BLL.Dtos.BookDTo;


<form asp-controller="Book" asp-action="Update" method="post">
    <div asp-validation-summary="All">
    </div>
    <div class="form-group">
        <label>Book Name</label>
        <input type="text" class="form-control" placeholder="Enter Name" asp-for="Name" >
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Rating</label>
        <input type="text" class="form-control" placeholder="Rating" asp-for="Rating" >
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Choose Category </label>

        <select id="CategoryList" asp-for="CategoryId" asp-items="(SelectList)ViewBag.CategoryList" >

            <option value="">Select</option>
           



        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>

    <button class="btn btn-info" type="submit">Update</button>

</form>



@section MicroSoftValidation {

    <script src="~/plugins//jquery-validation//jquery.validate.js"> </script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}